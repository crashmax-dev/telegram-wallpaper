{
  "name": "twallpaper",
  "description": "ðŸŒˆ Multicolor gradient wallpaper created algorithmically and shimmers smoothly.",
  "version": "1.1.1",
  "type": "module",
  "types": "./dist/twallpaper.d.ts",
  "module": "./dist/twallpaper.es.js",
  "main": "./dist/twallpaper.cjs.js",
  "main:umd": "./dist/twallpaper.umd.js",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/twallpaper.es.js",
      "require": "./dist/twallpaper.cjs.js",
      "default": "./dist/twallpaper.es.js",
      "types": "./dist/twallpaper.d.ts"
    },
    "./dist/twallpaper.css": "./dist/twallpaper.css"
  },
  "scripts": {
    "dev": "pnpm build && pnpm dev:website",
    "build": "del-cli dist && vite build && tsc --emitDeclarationOnly && cp src/twallpaper.css dist",
    "dev:website": "pnpm -r --filter=website run dev",
    "build:website": "pnpm build && pnpm -r --filter=website run build"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crashmax-dev/twallpaper.git"
  },
  "bugs": {
    "url": "https://github.com/crashmax-dev/twallpaper/issues"
  },
  "homepage": "https://twallpaper.js.org",
  "keywords": [
    "multicolor",
    "gradient",
    "wallpaper",
    "background",
    "animation",
    "telegram",
    "canvas"
  ],
  "devDependencies": {
    "@babel/core": "^7.18.9",
    "@babel/preset-env": "^7.18.9",
    "@crashmax/tsconfig": "^1.0.1",
    "@rollup/plugin-babel": "^5.3.1",
    "@types/node": "^18.0.6",
    "del-cli": "^4.0.1",
    "vite": "^3.0.1",
    "vite-plugin-banner": "^0.3.0"
  }
}
